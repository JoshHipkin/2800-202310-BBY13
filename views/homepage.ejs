<%- include("templates/header") %>

  <div class="text-center mb-5 mt-5">
    <h3>Start by searching for recipes using our image detection AI, or simply by using the search bar</h3>
  </div>
        <a href="/imageUpload" class="btn btn-primary btn-lg d-flex justify-content-center mx-5">
      <i class="bi bi-camera me-2"></i>Search By Image!
    </a>
    <form class="form-inline my-5 mx-5" action="/search" method="GET">
      <div class="input-group">
        <label for="search_input">
            Search by recipe name or add as many ingredients as you want, separated by commas
        </label>
        <input type="text" class="form-control mb-3" id="search_input" name="q" placeholder="">
        <button type="submit" class="btn btn-primary mb-3" id="">
            <i class="bi bi-search"></i>     
        </div>
    </form>
<div class="jumbotron jumbotron-fluid bg-primary text-light">
    <div class="container text-center">
        <h3 class="display-6">Try some user uploaded recipes!</h3>
    </div>
</div>
    
    <div id="carouselExampleCaptions" class="carousel slide">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <a href="#"><img src="/public/images/dish1.jpg" class="d-block w-100 carousel-img" alt="..."></a>
            <div class="carousel-caption d-md-block">
              <h5>First slide label</h5>
            </div>
          </div>
          <div class="carousel-item">
            <a href="#"><img src="/public/images/dish2.jpg" class="d-block w-100 carousel-img" alt="..."></a>
            <div class="carousel-caption d-md-block">
              <h5>Second slide label</h5>
            </div>
          </div>
          <div class="carousel-item">
            <a href="#"><img src="/public/images/dish3.jpg" class="d-block w-100 carousel-img" alt="..."></a>
            <div class="carousel-caption d-md-block">
              <h5>Third slide label</h5>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      

      <script>
        const carousel = new bootstrap.Carousel('#myCarousel')
      </script>

    <%- include("templates/footer") %>