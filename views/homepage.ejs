<%- include(`templates/header${headerSession}`) %> 

<div class="text-center mt-4">
  <h5>Search for recipes using our AI image detection</h5>
</div>
      <a href="/imageUpload" class="btn btn-success btn-lg d-flex justify-content-center mx-5">
    <i class="bi bi-camera me-2"></i>Search By Image!
  </a>


    <form class="form-inline my-5 mx-5" action="/search" method="GET">
      <div class="form-group">
            <div class="input-group">
                <input type="text" class="form-control mb-3" id="search_input" name="q" placeholder="Search for recipes and ingredients ..." style="border-radius: 25px;">
                <button type="submit" class="btn mb-3" id="">
                    <i class="bi bi-search"></i>
            </div>
            <label for="search_input" style="color: rgb(76, 76, 76);">Search by recipe name or add as many ingredients as you want *(separated by commas)*</label>
        </div>
    </form>

   

    <div class="container recipe" >
      <div class="card mb-3 custom-card">
        <img src="/public/images/recipehome1.jpeg" class="card-img-top recipebrowse custom-image" alt="dinner" >
        <div class="card-body">
          <h1 class="card-title">Easy 30-minutes-or-less Dinners</h1>
          <p class="card-text">Here you'll find a collection of delicious recipes that your family will love! Flavored, well-rounded dishes with layer after layer of fresh goodness.</p>
          <p class="card-text"><a class="btn btn-success" href="/browseRecipe/1" role="button">Explore</a></p>
        </div>
      </div>      
    </div>

    <div class="container recipe" >
      <div class="card mb-3 custom-card">
        <img src="/public/images/recipehome2.jpeg" class="card-img-top recipebrowse custom-image" alt="dinner" >
        <div class="card-body">
          <h1 class="card-title">Healthy and Low Calorie Recipes</h1>
          <p class="card-text">These nutritious and low-calorie recipes offer a perfect balance between nourishment and culinary delight.</p>
          <p class="card-text"><a class="btn btn-success" href="/browseRecipe/2" role="button">Explore</a></p>
        </div>
      </div>      
    </div>


    <div class="container recipe" >
      <div class="card mb-3 custom-card">
        <img src="/public/images/recipehome3.jpeg" class="card-img-top recipebrowse custom-image" alt="dinner" >
        <div class="card-body">
          <h1 class="card-title">Recipe of the Day</h1>
          <p class="card-text">Explore the top delicious recipes! They make any occasion feel extra-special, even everyday dinners.</p>
          <p class="card-text"><a class="btn btn-success" href="/browseRecipe/3" role="button">Explore</a></p>
        </div>
      </div>      
    </div>
    
    <h2 class="text-center explore-heading">Explore More</h2>
    <div class="card-container explore">
      <div class="card explorerecipe">
        <div class="card-content">
          <a href="/browseRecipe/4">
            <img src="/public/images/breakfast.jpeg" class="card-img-top-1" alt="breakfast">
          </a>
          <h3>Breakfast</h3>
        </div>
      </div>
    
      <div class="card explorerecipe">
        <div class="card-content">
          <a href="/browseRecipe/5">
            <img src="/public/images/lunch.jpeg" class="card-img-top-1" alt="lunch">
          </a>
          <h3>Lunch</h3>
        </div>
      </div>
    
      <div class="card explorerecipe">
        <div class="card-content">
          <a href="/browseRecipe/6">
            <img src="/public/images/dinner.jpeg" class="card-img-top-1" alt="dinner">
          </a>
          <h3>Dinner</h3>
        </div>
      </div>
    
      <div class="card explorerecipe">
        <div class="card-content">
          <a href="/browseRecipe/7">
            <img src="/public/images/dessert.jpeg" class="card-img-top-1" alt="dessert">
          </a>
          <h3>Dessert</h3>
        </div>
      </div>
    </div>
    


    <div class="jumbotron jumbotron-fluid text-light mx-5 mb-4">
      <div class="container text-center">
        <h3 class="display-4" style="font-size: 32px; color: white;">Try some of ReciPAL's community recipes!</h3>
      </div>
    </div>
    
    
    <div class="box-shadow">
      <div id="carouselExampleCaptions" class="carousel slide">
        <div class="carousel-indicators">
          <% for (let i = 0; i < recipe.length; i++) { %>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= i %>" <% if (i === 0) { %>class="active" <% } %>aria-current="<%= i === 0 ? 'true' : 'false' %>" aria-label="Slide <%= i + 1 %>"></button>
          <% } %>
        </div>
    
        <div class="carousel-inner">
          <% for (let i = 0; i < recipe.length; i++) { %>
            <div class="carousel-item <% if (i === 0) { %>active <% } %>">
              <a href="/communityRecipe?id=<%= recipe[i]._id %>">
                <img src="/public/images/community.jpeg" class="d-block w-100 carousel-img dimmed-image" alt="...">
              </a>
              <div class="carousel-caption d-md-block">
                <h4 style="font-size: 40px;"><%= recipe[i].name %></h4>
                <p class="carousel-description" style="font-size: 14px;"><%= recipe[i].description %></p>
              </div>
            </div>
          <% } %>
    
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
    
    
    <script>
      const carousel = new bootstrap.Carousel('#carouselExampleCaptions', {
        interval: false // Disable auto-rotation
      });
    </script>
      

      
    <%- include("templates/footer") %>