<%- include("templates/header") %> 
<!-- inspired from 1800 demo -->
<div class="container">
    <h1>User Profile </h1>
    <form>
        <fieldset class="mb-3" id="personalInfoFields" disabled>
            <div class="form-group">
                <label>User ID</label>
                <input type="text" id="IDProfile" class="form-control" value="<%=user.at(0)%>">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" id="emailProfile" class="form-control" placeholder="Email" value="<%=user.at(1)%>">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" id="passwordProfile" class="form-control" placeholder="Password" value="<%=user.at(2)%>">
            </div>
            <div class="form-group">
                <label>Dietary Preferences</label>
                <input type="text" id="dietaryProfile" class="form-control" placeholder="Ingredients">
            </div>
        </fieldset>
